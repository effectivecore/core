  # ─────────────────────────────────────────────────────────────────────
  # registered user + role
  # ─────────────────────────────────────────────────────────────────────
    - title_for_registered_user_ws_role_delimiter|step_title
        title: ==================================================================
    - title_for_registered_user_ws_role|step_title
        title: REGISTERED USER + ROLE
    - set_user_roles|step_set_user_roles
        nickname: %%_test_nickname_random{0}
        roles
        - =: test
        is_reset: true
    - set_role_permissions|step_set_role_permissions
        id_role: test
        permissions
        - =: text_select
        - =: text_update
        - =: text_insert
        - =: text_delete
        is_reset: true
    - transpositions|step_transpositions
      # ┌────╥─────────┬─────────┬─────────┬─────────┐
      # │  i ║ …select │ …insert │ …update │ …delete │
      # ╞════╬═════════╪═════════╪═════════╪═════════╡
      # │  0 ║         │         │         │         │ ← 0000
      # │  1 ║         │         │         │    x    │ ← 0001
      # │  2 ║         │         │    x    │         │ ← 0010
      # │  3 ║         │         │    x    │    x    │ ← 0011
      # │  4 ║         │    x    │         │         │ ← 0100
      # │  5 ║         │    x    │         │    x    │ ← 0101
      # │  6 ║         │    x    │    x    │         │ ← 0110
      # │  7 ║         │    x    │    x    │    x    │ ← 0111
      # │  8 ║    x    │         │         │         │ ← 1000
      # │  9 ║    x    │         │         │    x    │ ← 1001
      # │ 10 ║    x    │         │    x    │         │ ← 1010
      # │ 11 ║    x    │         │    x    │    x    │ ← 1011
      # │ 12 ║    x    │    x    │         │         │ ← 1100
      # │ 13 ║    x    │    x    │         │    x    │ ← 1101
      # │ 14 ║    x    │    x    │    x    │         │ ← 1110
      # │ 15 ║    x    │    x    │    x    │    x    │ ← 1111
      # └────╨─────────┴─────────┴─────────┴─────────┘
        action_before|step_set_role_permissions
          id_role: test
          is_reset: true
        actions
        - set_role_permission_select|step_actions
            actions
            - title|step_title
                title: SELECT
        - set_role_permission_insert|step_actions
            actions
            - title|step_title
                title: INSERT
        - set_role_permission_update|step_actions
            actions
            - title|step_title
                title: UPDATE
        - set_role_permission_delete|step_actions
            actions
            - title|step_title
                title: DELETE
  # ─────────────────────────────────────────────────────────────────────
  # return
  # ─────────────────────────────────────────────────────────────────────
    - return_result|step_return
        value: 1