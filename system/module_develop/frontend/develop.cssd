
  x-console {display: block; max-width: 800px; margin: 100px auto 100px auto}

  /* logs */

  x-block.logs td {vertical-align: top}
  x-block.logs tr:nth-child(even)   td {background-color: transparent}
  x-block.logs tr:nth-last-child(1) td {border-bottom: none}
  x-block.logs tr.autoload    {background-color: papayawhip}
  x-block.logs tr.file        {background-color: aliceblue}
  x-block.logs tr.event       {background-color: lavender}
  x-block.logs tr.storage     {background-color: honeydew}
  x-block.logs td.value-error {background-color: pink}
  x-block.logs tr.query td.name {font-size: .9em}

  /* load diagram */

  x-block.diagram-load dl {margin: 50px 0; padding: 30px; border: 1px solid %%_color_border; border-top: 5px solid %%_color_bg}
  x-block.diagram-load dl dt {margin: 0 10px 0 0; padding: 0; float: left; min-width: 290px; font-size: 1.2em; line-height: 1.2em; text-align: right}
  x-block.diagram-load dl dd {margin: 0 0 0 300px; padding: 0; font-size: .9em}

  /* scale in any diagram */

  x-scale {display: block; height: 5px; background: %%_color_bg}

  /* php modules usage list */

  table.php_mod_usage td.file {width: 90%}

  /* reports */

  x-document.report {max-height: 400px; overflow: scroll}
  x-document.report p {margin: 0}

  /* x-structures-list */

  x-structures-list {display: block}
  x-structures-list x-item {display: block; margin: 40px 0}
  x-structures-list x-item > x-name {display: block; font-size: 1.5em; line-height: 1.5em}
  x-structures-list x-item x-namespace {display: block}
  x-structures-list x-file-path x-directory {display: none}
  x-structures-list x-file-path:hover x-directory {display: inline-block}

  /* uml class diagram */

  x-diagram-uml {font-family: 'Arial'; overflow: auto}
  x-diagram-uml, x-diagram-uml * {display: block}
  x-diagram-uml x-children:empty {display: none}
  x-diagram-uml x-class {width: 370px; border: 1px solid #ff2b2b; background: #fff5d8}
  x-diagram-uml x-class x-name-wrapper {padding: 3px; padding-bottom: 6px; text-align: center}
  x-diagram-uml x-class x-name {font-weight: bold; text-transform: capitalize}
  x-diagram-uml x-class x-namespace {font-size: .9em; line-height: 1em}
  x-diagram-uml x-class[data-abstract='true'] x-name {font-style: italic}
  x-diagram-uml x-class x-attributes,
  x-diagram-uml x-class x-operations {padding: 3px 6px; border-top: 1px solid #ff2b2b}
  x-diagram-uml x-item[data-static='true'] {text-decoration: underline}

  x-diagram-uml x-class-wrapper {padding-top: 20px}
  x-diagram-uml x-children x-class-wrapper {padding-left: 30px}
  x-diagram-uml x-children x-class-wrapper             {background: url('images/relation-hline.svgd')                no-repeat, url('images/relation-vline.svgd') repeat-y}
  x-diagram-uml x-children x-class-wrapper:first-child {background: url('images/relation-arrow-generalization.svgd') no-repeat, url('images/relation-vline.svgd') repeat-y}
  x-diagram-uml x-children x-class-wrapper:last-child  {background: url('images/relation-hline.svgd')                no-repeat}
  x-diagram-uml x-children x-class-wrapper:only-child  {background: url('images/relation-arrow-generalization.svgd') no-repeat}

  x-diagram-uml x-item[data-visibility='public']::before    {content: '+ '}
  x-diagram-uml x-item[data-visibility='protected']::before {content: '# '}
  x-diagram-uml x-item[data-visibility='private']::before   {content: '- '}

  x-diagram-uml x-attributes,
  x-diagram-uml x-operations {display: none}
  x-diagram-uml x-attributes:empty,
  x-diagram-uml x-operations:empty {display: none !important}

  x-block.structures-diagram #expand:checked ~ x-diagram-uml x-attributes,
  x-block.structures-diagram #expand:checked ~ x-diagram-uml x-operations {display: block}

  x-block.demo-canvas svg {border: 1px solid lightgray}
