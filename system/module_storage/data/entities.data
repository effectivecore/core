entities
- selection|Entity
    name: selection
    title: Selection
    title_plural: Selections
    table_name: selections
    managing_is_enabled: true
    has_button_insert_and_update: true
    has_message_for_additional_controls: true
    has_parallel_checking: true
    with_is_embedded: true
    with_module_id: true
    with_data: true
    access
      on_select
        roles
        - =: admins
        permissions
        - =: manage_data__content_page_selection__select
      on_insert
        roles
        - =: admins
        permissions
        - =: manage_data__content_page_selection__insert
      on_update
        roles
        - =: admins
        permissions
        - =: manage_data__content_page_selection__update
      on_delete
        roles
        - =: admins
        permissions
        - =: manage_data__content_page_selection__delete
    fields
    - id
        title: ID
        type: varchar
        size: 255
        collate: nocase
        not_null: true
        check: (id <> '')
        managing
          is_enabled_on_insert: true
          is_enabled_on_update: true
          control
            class: \effcore\Field_ID_text
            properties
            - is_validate_uniqueness: true
            - weight: +400
            element_attributes_on_update
            - disabled: true
    - main_entity_name
        title: Entity name
        type: varchar
        size: 64
        collate: nocase
        not_null: true
        check: (main_entity_name <> '')
        managing
          is_enabled_on_insert: true
          is_enabled_on_update: true
          control
            class: \effcore\Field_Select_entity
            properties
            - weight: +380
            element_attributes_on_update
            - disabled: true
    - description
        title: Description
        type: varchar
        size: 1024
        collate: nocase
        not_null: true
        check: (description <> '')
        converters
          on_insert: \effcore\Core::html_entity_encode
          on_update: \effcore\Core::html_entity_encode
        managing
          is_enabled_on_insert: true
          is_enabled_on_update: true
          control
            class: \effcore\Field_Text
            properties
            - weight: +360
            element_attributes
            - maxlength: 1024
            - size: 60
    - attributes
        title: Attributes
        type: blob
        default: null
        converters
          on_select: unserialize
          on_insert: \effcore\Core::data_serialize
          on_update: \effcore\Core::data_serialize
          on_render: \effcore\Widget_Attributes::value_to_markup
        managing
          is_enabled_on_insert: true
          is_enabled_on_update: true
          control
            class: \effcore\Widget_Attributes
            properties
            - name_complex: attributes
            - weight: +340
    - fields
        title: Fields
        type: blob
        default: null
        converters
          on_select: unserialize
          on_insert: \effcore\Core::data_serialize
          on_update: \effcore\Core::data_serialize
          on_render: \effcore\Core::data_serialize
        managing
          is_enabled_on_update: true
          control
            class: \effcore\Widget_Selection_fields
            properties
            - name_complex: fields
            - weight: +320
    - query_settings
        title: Query settings
        type: blob
        default: null
        converters
          on_select: unserialize
          on_insert: \effcore\Core::data_serialize
          on_update: \effcore\Core::data_serialize
          on_render: \effcore\Core::data_serialize
        managing
          is_enabled_on_update: true
          control
            class: \effcore\Widget_Selection_query
            properties
            - name_complex: query_settings
            - weight: +300
    - decorator_settings
        title: Decorator settings
        type: blob
        default: null
        converters
          on_select: unserialize
          on_insert: \effcore\Core::data_serialize
          on_update: \effcore\Core::data_serialize
          on_render: \effcore\Core::data_serialize
        managing
          is_enabled_on_update: true
          control
            class: \effcore\Widget_Selection_decorator
            properties
            - name_complex: decorator_settings
            - weight: +280
    - created
        title: Created
        type: datetime
        default: null
        check: (created <> '')
        managing
          control
            class: \effcore\Field_DateTime_local
            properties
            - weight: +240
    - updated
        title: Updated
        type: datetime
        default: null
        check: (updated <> '')
        managing
          control
            class: \effcore\Field_DateTime_local
            properties
            - weight: +220
    constraints
    - primary_id
        type: primary
        fields
        - =: id
    indexes
    - index_created
        type: index
        fields
        - =: created
    - index_updated
        type: index
        fields
        - =: updated