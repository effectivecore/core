forms
- install|form
    attributes
    - id: install
    - method: post
    - novalidate: true
    children
    - license_agreement|widget_license_agreement
    - storage|fieldset
        title: Storage
        state: closed
        children
      # driver
        - is_mysql|field_radiobutton
            title: MySQL
            attributes
            - data-before-container: true
            element_attributes
            - name: driver
            - value: mysql
      # MySQL parameters
        - mysql|fieldset
            children
          # field 'Hostname'
            - host|field_text
                title: Hostname
                description: Try entering the value "127.0.0.1" or "localhost" if you get an error message such as "unknown mysql server host [::1]".
                element_attributes
                - name: host
                - value: [::1]
                - maxlength: 253
                - pattern: ^[a-z0-9_\-\:\.\[\]/]+$
          # field 'Port'
            - port|field_number
                title: Port
                element_attributes
                - name: port
                - value: 3306
                - min: 1024
                - max: 49150
          # field 'User name' (login)
            - storage_login|field_text
                title: User name
                element_attributes
                - name: storage_login
                - value: root
                - maxlength: 64
                - pattern: ^[a-zA-Z0-9_\-]+$
          # field 'Password'
            - password|field_password
                element_attributes
                - name: storage_password
                - minlength: null
                - required: null
          # field 'Database name'
            - database_name|field_text
                title: Database name
                element_attributes
                - name: database_name
                - value: effcore
                - maxlength: 127
                - pattern: ^[a-zA-Z0-9_\-]+$
      # driver
        - is_sqlite|field_radiobutton
            title: SQLite
            attributes
            - data-before-container: true
            element_attributes
            - name: driver
            - value: sqlite
      # SQLite parameters
        - sqlite|fieldset
            children
          # field 'File name'
            - file_name|field_text
                title: File name
                element_attributes
                - name: file_name
                - value: data.sqlite
                - maxlength: 255
                - pattern: ^[a-zA-Z0-9_\-\.]+$
                - readonly: true
      # shared parameters
        - params|fieldset
            title: Shared parameters
            children
          # field 'Table prefix'
            - table_prefix|field_text
                title: Table prefix
                element_attributes
                - name: table_prefix
                - maxlength: 10
                - pattern: ^[a-zA-Z0-9_\-]+$
                - required: null
    # user parameters
    - user|fieldset
        title: User
        state: closed
        children
      # field 'Email'
        - email|field_email
            element_attributes
            - value: admin@example.com
      # field 'Password'
        - password|field_password
      # field 'Time zone'
        - timezone|field_timezone
            element_attributes
            - data-source: uagent-timezone
    # profile parameters
    - profile|fieldset
        title: Profile
        state: closed
        children
      # field 'Profile'
        - profile|field_select
            title: Profile
            element_attributes
            - name: profile
            values
            - not_selected: - select -
    - button_install|button
        title: install
        attributes
        - value: install
        weight: -500